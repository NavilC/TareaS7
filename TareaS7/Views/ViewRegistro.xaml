<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TareaS7.Views.ViewRegistro"
             xmlns:local ="clr-namespace:TareaS7.ViewModels">

    <ContentPage.BindingContext>
        <local:ViewModelRegistro></local:ViewModelRegistro>
    </ContentPage.BindingContext>
    
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Label Text="nombre"></Label>
            <Entry Text="{Binding Nombre}" Keyboard="Text"></Entry>
            
            <Label Text="email"></Label>
            <Entry Text="{Binding Email}" Keyboard="Email"></Entry>

            <Label Text="Contraseña"></Label>
            <Entry Text="{Binding Pass}" Keyboard="Text" ></Entry>
            
            <Button Command="{Binding registroUsuario}" Text="Registrar" CornerRadius="20"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>